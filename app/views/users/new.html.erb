<div id="new-user-form", style="text-align: center;">
<h2>Register a New User</h2><br>
  <%= form_with url: register_path, method: :post, local: true do |form| %>
    <%= form.label :name, "Name:" %>
    <%= form.text_field :name %><br><br>
    <%= form.label :email, "Email:" %>
    <%= form.email_field :email %><br><br>
    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>
    <%= form.label :password_confirmation, "Confirm Password:" %>
    <%= form.password_field :password_confirmation %>
    <%= form.submit "Create New User" %>
  <% end %>
</div>