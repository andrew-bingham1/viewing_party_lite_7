<div style="text-align: center;">
  <%=button_to "Discover Page", discover_path, method: :get%>
  <h3>Top Rated Movies</h3>
  <br>
</div>

<div id="movies" style="text-align: center;">
    <%facade.top_20.each do |movie|%>

    <div style="text-align: center;">
        <div style="text-align: left; display: inline-block;">
        <span><%= link_to movie.title, user_movie_path(@user, movie.id) %></span>
        </div>

        <div style="text-align: right; display: inline-block;">
        <span >Vote Average: <%= movie.vote_average %></span>
        </div>
    </div>

      <br>
    <%end%>
</div>
