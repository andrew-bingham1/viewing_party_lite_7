<div id='title' style="text-align: center;">
  <h3><%=@facade.specific_movie.title%></h3>

<%=button_to "Discover Page", discover_path, method: :get%>
<br>
<%= button_to "Create Viewing Party for #{@facade.specific_movie.title}", user_new_viewing_party_path(@user, @facade.specific_movie.id), method: :get%>
</div>

<br>

<div id="movie-info" style="text-align: center;">
  <p style = "display: inline"><b>Vote: <%=@facade.specific_movie.vote_average%></p> &nbsp;&nbsp;&nbsp;&nbsp;
  <p style = "display: inline">Runtime: <%=@facade.specific_movie.runtime/60%> hour(s) and <%=@facade.specific_movie.runtime%60%> minutes</p>&nbsp;&nbsp;&nbsp;&nbsp;
  <p style = "display: inline">Genre(s): <%@facade.specific_movie.genres.each do |genre| %>
            <%=genre[:name]%>
            <%end%>
  </p></b>
</div>
<hr size="5" color="black">
<div id="summary">
  <h3>Summary:</h3>
  <p><%= @facade.specific_movie.summary %></p>
</div>

<div id="cast"> 
  <h3>Cast:</h3>
    <% @facade.cast_info.each do |cast|%>
      <ul>
        <li><%= cast.name %> as <%= cast.character %></li>
     </ul>
    <% end %>
</div>
  
<div id='reviews'>
  <h3><%=@facade.review_count%> Reviews:</h3>
    <% @facade.review_info.each do |review| %>
      <p><b>Reviewer: <%= review.author %></b><br><br>
        <%= review.content %></p><br>
    <% end %>
</div>