<div style="text-align: center;">
<%=button_to "Discover Page", discover_path, method: :get%>
<h3>Movie Search Results</h3>
</div>

<div id="movies" style="text-align: center;">
  <%facade.search_results.each do |movie|%>
    <div id="movie-<%=movie.id%>">
      <p>
        <span><%=link_to movie.title, user_movie_path(@user, movie.id)%></span> 
        <span>Vote Average: <%=movie.vote_average%></span>
      </p>
    </div>
  <%end%>
</div>

