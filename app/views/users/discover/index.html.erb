<div style="text-align: center;">
<h2>Discover Movies</h2>
<div id='find-movies-button'>
  <%= button_to 'Find Top Rated Movies', movies_path(q: "top rated"), method: :get %>
</div>
<br>
<div id='movie-search'>
    <%= form_with url: movies_path, local: true, method: :get do |form|%>
    <%= form.text_field :movie_title, placeholder: "search" %>
    <%= form.submit 'Find Movies' %>
  <% end %>
</div>
</div>