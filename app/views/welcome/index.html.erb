<% if session[:user_id].present? %>
<% else %>
  <div id="button" style="text-align: center;">
    <%= form_tag(register_path, method: :get) do %>
      <%= submit_tag "Create a New User"%>
    <% end %>
  </div>
<% end %>

<br>

<% if session[:user_id].present? %>
  <div id="button-2" style="text-align: center;">
    <%= form_tag(logout_path, method: :get) do %>
      <%= submit_tag "Log Out"%>
    <% end %>
<% else %>
  <div id="button-2" style="text-align: center;">
    <%= form_tag(login_path, method: :get) do %>
      <%= submit_tag "Log In"%>
    <% end %>
  <% end %>
</div>

<div id="existing-users" style="text-align: center;">
  <h2>Existing Users</h2>
    <ul style="display: inline-block; text-align: left; padding-right: 30px;">
      <% @users.each do |user| %>
        <li style="text-align: left;"> <%= link_to "#{user.email}", user_path(user.id) %></li>
      <% end %>
    </ul>
</div>